{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Native",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "types": ["react-native", "jest"],
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Causes issues with package.json "exports"
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*/index", "src/screens/*", "src/screens/index"],
      "@theme/*": ["src/theme/*/index", "src/theme/*", "src/theme/index"],
      "@components/*": ["src/components/*/index", "src/components/*", "src/components/index"],
      "@images": ["src/assets/images/index"],
      "@services/*": ["src/services/*", "src/services/helpers"],
      "@navigation/*": ["src/navigation/*/index", "src/navigation/*", "src/navigation/index"],
      "@config": ["src/config/index"],
      "@state/*": ["src/state/*/index", "src/state/*", "src/state/index"],
      "@locales/*": ["src/locales/*/index","src/locales/*", "src/locales/index"],
      "@context/": ["src/context/index"],
      "@hooks": ["src/hooks/index"],
    },
  },
  "exclude": [
    "**/Pods/**"
  ]
}
